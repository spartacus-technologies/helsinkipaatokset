<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spartacus.helsinki_paatokset.FragmentPolicyMakers">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#000000"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:background="@drawable/round_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="↑"
            android:id="@+id/buttonBackToUpFragmentPolicyMakers_old"
            android:visibility="gone"
            android:layout_gravity="center_horizontal|bottom"
            android:textStyle="bold" />

        <View
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:id="@+id/viewStub"
            android:visibility="gone" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|bottom"
            android:hint="Hae päättäjistä..."
            android:id="@+id/editTextSearchFragmentPolicyMakers"
            android:background="@drawable/edit_text"
            android:paddingLeft="15dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewFragmentPolicyMakers"
        android:layout_above="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Päivitä"
                android:id="@+id/buttonUpdateFragmentPolicyMakers"
                android:layout_gravity="top|center"
                android:visibility="gone" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayoutFragmentPolicyMakers"
                android:gravity="center_horizontal"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="New Text"
        android:id="@+id/textViewDebug"
        android:visibility="gone" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarContentLoadingFragmentPolicyMakers"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/buttonBackToUpFragmentPolicyMakers"
        android:src="@mipmap/arrow_up"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/scrollViewFragmentPolicyMakers"
        android:layout_alignRight="@+id/scrollViewFragmentPolicyMakers"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"

        />

</RelativeLayout>
